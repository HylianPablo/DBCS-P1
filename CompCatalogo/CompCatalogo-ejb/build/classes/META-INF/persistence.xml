<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="CompCatalogo-ejbPU" transaction-type="JTA">
    <jta-data-source>p1dbcs</jta-data-source>
    <class>Dominio.Configuracionpc</class>
    <class>Dominio.Cpu</class>
    <class>Dominio.Descripcioncomponente</class>
    <class>Dominio.Tipocomponente</class>
    <exclude-unlisted-classes>false</exclude-unlisted-classes>
    <properties>
        <property name="javax.persitance.jdbc.url" value="jdbc:derby://localhost:1527/p1dbcs"/>
        <property name="javax.persitance.jdbc.user" value="usuario"/>
        <property name="javax.persitance.jdbc.driver" value="org.apache.derby.jdbc.ClientDriver"/>
        <property name="javax.persitance.jdbc.password" value="password"/>
      <property name="javax.persistence.schema-generation.database.action" value="create"/>
    </properties>
  </persistence-unit>
</persistence>
